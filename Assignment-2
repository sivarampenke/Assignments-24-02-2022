# write a program to separate odd and even from the list

n=int(input("Enter the Length of list:"))
a=[]
for i in range(1,n+1):
    x=int(input("Enter the element:"))
    a.append(x)
l=a
n=len(l)
o=[]
e=[]
for i in range(n):
    j=i+1
    if j%2==0:
        e.append(l[i])
    else:
        o.append(l[i])

print('odd numbers in the list',o)

print('\neven numbers in the list',e)
